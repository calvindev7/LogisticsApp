@model List<LogisticsApp.Models.EnvioTerrestre>

<h3>Envíos Terrestres</h3>

@if (Model == null)
{
    <p>Cargando...</p>
}
else if (Model.Count == 0)
{
    <p>No se encontraron envíos terrestres.</p>
}
else
{
    <div class="row">
        <div class="col-md-6">
            <a asp-action="Create" class="btn btn-info" data-bs-toggle="tooltip" data-bs-placement="top" title="Crear envío terrestre"><i class="bi bi-plus-circle"></i> Crear envío terrestre</a>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Tipo de Producto</th>
                    <th>Cantidad de Producto</th>
                    <th>Fecha de Registro</th>
                    <th>Fecha de Entrega</th>
                    <th>Bodega de Entrega</th>
                    <th>Precio de Envío</th>
                    <th>Placa del Vehículo</th>
                    <th>Número de Guía</th>
                    <th>Cliente</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var envioTerrestre in Model)
                {
                    <tr>
                        <td>@envioTerrestre.TipoProducto</td>
                        <td>@envioTerrestre.CantidadProducto</td>
                        <td>@envioTerrestre.FechaRegistro.ToShortDateString()</td>
                        <td>@envioTerrestre.FechaEntrega.ToShortDateString()</td>
                        <td>@envioTerrestre.Bodega.Nombre</td>
                        <td>@envioTerrestre.PrecioEnvio.ToString("0.00")</td>
                        <td>@envioTerrestre.PlacaVehiculo</td>
                        <td>@envioTerrestre.NumeroGuia</td>
                        <td>@envioTerrestre.Cliente.Nombre</td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@envioTerrestre.Id" class="btn btn-danger" data-bs-toggle="tooltip" data-bs-placement="top" title="Eliminar"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
